﻿<form class="search-form" ng-if="AUTHORIZED" ng-submit="setFilters(filters)">
	<div class="input-group">
		<input ng-model="filters.term" type="text" class="form-control" placeholder="Type text to search">
		<span class="input-group-btn">
			<button type="submit" class="btn btn-success">Search</button>
		</span>
	</div>
</form>